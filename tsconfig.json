{
  "allowJs": true,
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": false,
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./__tests__/**/*",
    "./lib/**/*",
    "./stubs/**/*"
  ]
}
